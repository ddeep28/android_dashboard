<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 tools:context=".dashboard"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent" android:layout_height="match_parent">




<ScrollView

             android:background="@drawable/bg"
             android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent"
        >



    <GridLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:rowCount="5" android:columnCount="2"
                android:alignmentMode="alignMargins" android:columnOrderPreserved="false">



        <android.support.v7.widget.CardView android:id="@+id/card1" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                                android:orientation="vertical">
                    <ImageView android:layout_width="100dp" android:layout_gravity="center"
                               android:id="@+id/iv1"
                               android:layout_height="100dp"
                                android:src="@drawable/splash"/>

                    <TextView android:layout_width="wrap_content"
                              android:id="@+id/tv1"
                              android:layout_height="wrap_content"
                                android:layout_marginTop="6dp" android:text="Events" android:textSize="18dp"
                              android:layout_gravity="center"/>

                </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView android:id="@+id/card2" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp" android:layout_gravity="center"
                           android:id="@+id/iv2"
                           android:layout_height="100dp"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Schedule" android:id="@+id/tv2"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView android:id="@+id/card3" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp"
                           android:layout_gravity="center"
                           android:id="@+id/iv3"
                           android:layout_height="100dp"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Gallery" android:id="@+id/tv3"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView android:id="@+id/card4" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp"
                           android:layout_gravity="center"
                           android:id="@+id/iv4"
                           android:layout_height="100dp"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Team" android:id="@+id/tv4"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView android:id="@+id/card5" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp"
                           android:layout_gravity="center"
                           android:id="@+id/iv5"
                           android:layout_height="100dp"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="About US" android:id="@+id/tv5"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView android:id="@+id/card6" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp"  android:layout_height="100dp"
                           android:layout_gravity="center"
                           android:id="@+id/iv6"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Contact US" android:id="@+id/tv6"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/card7" android:elevation="5dp"
                                            app:cardCornerRadius="10dp" android:layout_margin="10dp"
                                            android:layout_height="wrap_content" android:layout_width="wrap_content"
                                            android:layout_rowWeight="1" android:layout_columnWeight="1">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView android:layout_width="100dp"  android:layout_height="100dp"
                           android:layout_gravity="center"
                           android:id="@+id/iv7"
                           android:src="@drawable/splash"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Downloads" android:id="@+id/tv7"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="6dp" android:textSize="18dp" android:layout_gravity="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>






    </GridLayout>





</LinearLayout>


</ScrollView>
    <com.github.clans.fab.FloatingActionMenu android:layout_width="wrap_content"
                                             android:id="@+id/famenu"
                                             app:menu_showShadow="true"
                                             app:menu_fab_label=""
                                             android:elevation="6dp"
                                             app:menu_labels_cornerRadius="28dp"
                                             android:layout_gravity="bottom|right|end"
                                             app:menu_openDirection="up"
                                             android:layout_alignParentBottom="true"
                                             android:layout_alignParentEnd="true"
                                             app:menu_backgroundColor="@android:color/transparent"
                                             android:layout_height="wrap_content"
                                             app:layout_constraintTop_toTopOf="parent"
                                             app:layout_constraintStart_toStartOf="parent">

        <com.github.clans.fab.FloatingActionButton android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"

                                                   app:fab_label="Get Form"
                                                   android:src="@drawable/ic_description"
                                                   app:fab_size="mini"
                                                   android:id="@+id/floatingActionButton"
                                                   app:layout_constraintTop_toTopOf="@+id/famenu"
                                                   app:layout_constraintStart_toStartOf="@+id/famenu"/>
        <com.github.clans.fab.FloatingActionButton android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"

                                                   app:fab_label="Get poster"
                                                   android:src="@drawable/ic_description"
                                                   app:fab_size="mini"
                                                   android:id="@+id/floatingActionButton1"
                                                   app:layout_constraintTop_toTopOf="@+id/famenu"
                                                   app:layout_constraintStart_toStartOf="@+id/famenu"/>





    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
