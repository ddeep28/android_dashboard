<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registeractivity">

    <TextView
            android:text="Register"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvreg"
            android:typeface="monospace" android:textAlignment="center"
            android:textStyle="bold" android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Full Name"
            android:drawableLeft="@drawable/ic_person"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/email" android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/tvreg"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email"
            android:id="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_lock"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/ic_lock"
            android:ems="10"
            android:id="@+id/cpass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pass"/>
    <Button
            android:text="Register"
            android:background="@drawable/shapebutton"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnreg"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnreset"
            app:layout_constraintEnd_toStartOf="@+id/btnreset" android:layout_marginEnd="31dp"
    />
    <Button
            android:text="Reset"
            android:background="@drawable/shapebutton"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnreset"
            app:layout_constraintStart_toEndOf="@+id/btnreg" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/cpass" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Back to Login."
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvback" android:layout_marginTop="71dp"
            app:layout_constraintTop_toBottomOf="@+id/btnreset" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="253dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:linksClickable="true"/>
</android.support.constraint.ConstraintLayout>